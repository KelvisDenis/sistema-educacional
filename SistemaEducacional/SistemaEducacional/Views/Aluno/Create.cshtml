@model SistemaEducacional.Models.AlunoModel
@{
    Random hash = new Random();
}

<form asp-controller="Aluno" asp-action="Create">
    
    <h2 style="margin-left:400px">Aluno</h2>
    <div class="row">
        @if (ViewBag.erro != null)
        {
            <span style="margin-left:400px; margin-block:10px; color: brown"><strong>@ViewBag.erro</strong></span>
        }
        <div class="container text-center">
            <div class="row d-flex justify-content-center">
               
                <label for="usuario" class="col-sm-2 col-form-label">
                    <small><strong>Nome</strong></small>
                </label>

                <div class="col-auto">
                    <input asp-for="@Model.Nome" type="text" class="form-control align-content-xl-center" id="usuario">
                    <span asp-validation-for="@Model.Nome"></span>
                    
                </div>
            </div>
            <div class="row d-flex justify-content-center">
                <label for="usuario" class="col-sm-2 col-form-label">
                    <small><strong>Cpf</strong></small>
                </label>

                <div class="col-auto">
                    <input asp-for="@Model.Cpf" type="text" class="form-control align-content-xl-center" id="usuario">
                    <span asp-validation-for="@Model.Cpf"></span>
                </div>
            </div>
            <div class="row d-flex justify-content-center">
                <label for="senha" class="col-sm-2 col-form-label">
                    <small><strong>Data Criação</strong></small>
                </label>
                <div class="col-auto text-center">
                    <input asp-for="@Model.DataNascimento" type="date" class="form-control"/>
                    <span asp-validation-for="@Model.DataNascimento"></span>
                </div>
            </div>
            <div class="row d-flex justify-content-center">
                <label for="usuario" class="col-sm-2 col-form-label">
                    <small><strong>Email</strong></small>
                </label>

                <div class="col-auto">
                    <input name="Email" asp-for="@Model.Email" type="text" class="form-control align-content-xl-center"/>
                    <span asp-validation-for="@Model.Email"></span>
                </div>
            </div>
            <div class="row d-flex justify-content-center">
                <label for="usuario" class="col-sm-2 col-form-label">
                    <small><strong>Senha gerada</strong></small>
                </label>

                <div class="col-auto">
                    <input name="senhaTemporaria" asp-for="@Model.SenhaTemporaria" type="text" value="@hash.Next()"/>
                    <span asp-validation-for="@Model.SenhaTemporaria"></span>
                </div>
            </div>
            <br />
            <div style="margin-left:200px; margin-top:30px">
                <input class="btn btn-outline-secondary" type="submit" value="Criar" />
            </div>
        </div>
    </div>
</form>
