@model SistemaEducacional.Models.DisciplinaModel
<form asp-controller="Disciplina" asp-action="Create">
    <h2 style="margin-left:400px">Disciplina</h2>
    @if (ViewBag.erro != null)
    {
        <span style="margin-left:400px; margin-block:10px; color: brown"><strong>@ViewBag.erro</strong></span>
    }
            <div class="row"> 
                <div class="container text-center">
                    <div class="row d-flex justify-content-center">
                        <label for="usuario" class="col-sm-2 col-form-label">
                            <small><strong>Nome da disciplina</strong></small>
                        </label>

                        <div class="col-auto">
                            <input asp-for="@Model.Nome" type="text"  class="form-control align-content-xl-center" id="usuario">
                        </div>
                    </div>
                    <div class="row d-flex justify-content-center">
                        <label for="senha" class="col-sm-2 col-form-label">
                            <small><strong>Data Criação</strong></small>
                        </label>
                        <div class="col-auto text-center">
                            <input asp-for="@Model.DataCriacao" type="date" class="form-control" id="senha">
                        </div>
                    </div>
                    <br />
                    <div style="margin-left:200px; margin-top:30px">
                        <input class="btn btn-outline-secondary" type="submit" value="Criar" />
                    </div>
                </div>
            </div>
</form>
