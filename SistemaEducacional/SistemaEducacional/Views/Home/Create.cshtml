@model SistemaEducacional.Models.DirecaoModel

<div class="row">
    <div class="col-sm-6 mb-3 mb-sm-0">
        <div class="card" style="width: 900px">
            <div class="card-body">
                <div style="margin-right:60px; margin-block-end:30px">
                    <small class="card-title">
                        <strong>
                            Criar Direção
                        </strong>
                    </small>
                </div>

                <form asp-controller="Home" asp-action="Create">
                    <div class="container text-center">
                        <div class="row d-flex justify-content-center">
                            <label for="usuario" class="col-sm-2 col-form-label">
                                <small><strong>Nome</strong></small>
                            </label>

                            <div class="col-auto">
                                <input asp-for="@Model.Nome" type="text" class="form-control align-content-xl-center" id="usuario">
                            </div>
                        </div>
                        <div class="row d-flex justify-content-center">
                            <label for="senha" class="col-sm-2 col-form-label">
                                <small><strong>Cpf</strong></small>
                            </label>
                            <div class="col-auto text-center">
                                <input asp-for="@Model.Cpf" type="text" class="form-control" id="senha">
                            </div>
                        </div>
                        <div class="row d-flex justify-content-center">
                            <label for="s" class="col-sm-2 col-form-label">
                                <small><strong>Data Nascimento</strong></small>
                            </label>
                            <div class="col-auto text-center">
                                <input asp-for="@Model.DataNascimento" type="date" class="form-control" id="s">
                            </div>
                        </div>
                        <div class="row d-flex justify-content-center">
                            <label for="senha" class="col-sm-2 col-form-label">
                                <small><strong>Email</strong></small>

                            </label>
                            <div class="col-auto text-center">
                                <input asp-for="@Model.Email"  type="text" class="form-control" id="senha">
                            </div>
                        </div>
                        <br />
                                <div class="row d-flex justify-content-center">
                                    <label for="senha" class="col-sm-2 col-form-label">
                                        <small><strong>Digite a sua senha</strong></small>
                                    </label>
                                    <div class="col-auto text-center">
                                        <input asp-for="@Model.Senha" value="" type="text" class="form-control" id="senha" name="confirmarSenha">
                                    </div>
                                </div>
                        <div style="margin-left:200px; margin-top:30px">
                            <input class="btn btn-outline-secondary" type="submit" name="name" value="Alterar" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
