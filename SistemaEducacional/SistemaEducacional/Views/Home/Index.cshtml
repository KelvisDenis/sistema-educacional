@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SistemaEducacional</title>
    <link rel="stylesheet" href="~/css/Indexcss.css" />
</head>
<body>
    <div class="foorms">
        <div class="container card" style="width:40rem;">
            <p><strong>Login</strong></p>
            <form asp-action="Login">
                <div class="container text-center">
                    <div class="row d-flex justify-content-center">
                        <label for="usuario" class="col-sm-2 col-form-label">Usuario</label>

                        <div class="col-auto">
                            <input type="email"  class="form-control align-content-xl-center" id="usuario" name="usuario">
                        </div>
                    </div>
                    <div class="row d-flex justify-content-center">
                        <label for="senha" class="col-sm-2 col-form-label">Senha</label>
                        <div class="col-auto text-center">
                            <input type="text" class="form-control" id="senha" name="senha" >
                        </div>
                    </div>
                </div>
                <div class="row-cols-6 ">
                    <div class="col-12 text-sm-center ">
                        <small><a asp-controller="Home" asp-action="Create" type="text/asp">Primeira vez aqui</a><br /> </small>
                        <small>  <a href="#">Esqueceu a senha</a></small>
                    </div>
                </div>
                <input class="botao" type="submit" name="name" value="Entrar" />
            </form>
        </div>
    </div>
</body>
</html>





