@model IEnumerable<SistemaEducacional.Models.DirecaoModel>


<nav class="navbar bg-body-tertiary">
    <div style="margin-left:350px" class="container-fluid">
        <form asp-controller="Direcao" asp-action="Buscar" class="d-flex" role="search">
            <input class="form-control me-2" type="search" placeholder="Buscar" aria-label="Search" name="nome">
            <button class="btn btn-outline-success" type="submit">Pesquisar</button>
        </form>
    </div>
</nav>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">CPF</th>
            <th scope="col">Data Nascimento</th>
            <th scope="col">Opções</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <th scope="row">@item.Nome</th>
                <td>@item.Cpf</td>
                <td>@item.DataNascimento.Value</td>
                <td>
                    <a asp-route-id="@item.Id" asp-controller="Direcao" asp-action="Alterar">Alterar</a>
                    <a asp-route-id="@item.Id" asp-controller="Direcao" asp-action="Excluir">Excluir</a>
                </td>
            </tr>
        }
       
    </tbody>
</table>
